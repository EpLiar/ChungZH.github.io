// vuepress-theme-simple

.item-title, .post-title, h1, h2, h3, h4, h5, h6 {
    font-family: 'Noto Serif CJK SC', 'Source Han Serif SC', 'Source Han Serif', source-han-serif-sc, 'Times New Roman', '宋体', serif;
    font-weight: 900;
    color: #2a2a2a;
}

.item-title, .post-title {
    font-size: 30px;
}

.header .site-name {
    font-size: 40px;
    font-weight: 450;
}

:root {
    --letter-spacing: 1;
    --caps-letter-spacing: .2em;
    --bold-font-weight: 800;
}

body {
    -webkit-text-size-adjust: none;
    text-rendering: optimizeLegibility;
    word-wrap: break-word;
    font-size: 19px;
    font-family: "Helvetica Neue", "PingFang SC", "Roboto", "Noto Sans CJK SC", "Noto Sans CJK", "Source Han Sans SC", "Source Han Sans", 'DengXian', "Microsoft Yahei", sans-serif;
}

.item-date, .post-date {
    font-size: 14px;
    font-family: "Heebo", sans-serif;
    color: #5eb95e;
}

.header .navbar-item {
    color: none;
}

